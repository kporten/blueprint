{
  "name": "@blueprint/with-hono",
  "description": "This is a blueprint for a REST API with Hono.",
  "private": true,
  "version": "0.0.0",
  "imports": {
    "#*": ["./src/*.ts"]
  },
  "exports": "./src/index.ts",
  "scripts": {
    "dev": "bun run --hot ./src/index.ts",
    "typecheck": "bunx --bun tsc",
    "check": "biome check --error-on-warnings",
    "format": "biome format --write",
    "test": "bun test --preload ./test/setup.ts",
    "test:watch": "bun test --watch --preload ./test/setup.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:check": "drizzle-kit check",
    "db:push": "drizzle-kit push",
    "db:seed": "bun run ./test/seed.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "0.5.0",
    "@neondatabase/serverless": "1.0.0",
    "@paralleldrive/cuid2": "2.2.2",
    "@scalar/hono-api-reference": "0.8.5",
    "@std/http": "npm:@jsr/std__http@1.0.15",
    "@t3-oss/env-core": "0.13.0",
    "drizzle-orm": "0.43.1",
    "drizzle-zod": "0.7.1",
    "hono": "4.7.8",
    "hono-openapi": "0.4.6",
    "zod": "3.24.3",
    "zod-openapi": "4.2.4",
    "zod-validation-error": "3.4.0"
  },
  "devDependencies": {
    "@electric-sql/pglite": "0.3.0",
    "@total-typescript/tsconfig": "1.0.4",
    "@types/bun": "1.2.13",
    "drizzle-kit": "0.31.1",
    "drizzle-seed": "0.3.1",
    "openapi-types": "12.1.3",
    "postgres": "3.4.5"
  }
}
