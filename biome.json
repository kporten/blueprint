{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!**/migrations", "!**/*.d.ts"]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [":BUN:", ":NODE:"],
              ":BLANK_LINE:",
              [":PACKAGE:", ":PACKAGE_WITH_PROTOCOL:"],
              ":BLANK_LINE:",
              ":ALIAS:",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "complexity": {
        "noImplicitCoercions": "warn",
        "noUselessStringConcat": "warn",
        "useSimplifiedLogicExpression": "warn"
      },
      "correctness": {
        "noReactPropAssignments": "error",
        "noUndeclaredDependencies": "error"
      },
      "performance": {
        "noBarrelFile": "warn",
        "noReExportAll": "warn"
      },
      "style": {
        "noInferrableTypes": "warn",
        "noNegationElse": "warn",
        "noNonNullAssertion": "info",
        "noParameterAssign": "warn",
        "noUnusedTemplateLiteral": "warn",
        "noUselessElse": "warn",
        "noYodaExpression": "warn",
        "useAsConstAssertion": "warn",
        "useBlockStatements": "warn",
        "useCollapsedElseIf": "warn",
        "useCollapsedIf": "warn",
        "useConsistentBuiltinInstantiation": "warn",
        "useConsistentObjectDefinitions": "warn",
        "useConsistentTypeDefinitions": {
          "level": "warn",
          "options": {
            "style": "interface"
          }
        },
        "useDefaultParameterLast": "warn",
        "useExplicitLengthCheck": "warn",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "filenameCases": ["kebab-case"]
          }
        },
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false
          }
        },
        "useNumberNamespace": "warn",
        "useReactFunctionComponents": "warn",
        "useShorthandAssign": "warn",
        "useThrowNewError": "warn",
        "useThrowOnlyError": "warn"
      },
      "suspicious": {
        "noConsole": {
          "level": "info",
          "options": {
            "allow": ["error", "info", "warn"]
          }
        },
        "noEmptyBlockStatements": "warn",
        "noUnassignedVariables": "warn",
        "useAwait": "warn",
        "useErrorMessage": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
