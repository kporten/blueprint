{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "check": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.json"]
    },
    "typecheck": {
      "inputs": ["**/*.ts", "**/*.tsx"]
    }
  }
}
