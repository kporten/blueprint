{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "inputs": ["**/*.ts", "**/*.tsx"]
    },
    "check": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.json"]
    },
    "format": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.json"]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:check": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    }
  }
}
